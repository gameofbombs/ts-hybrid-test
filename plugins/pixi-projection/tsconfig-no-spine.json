{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "outFile": "dist/pixi-projection.js",
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true,
        "lib": [
            "DOM",
            "ES5",
            "ScriptHost",
            "es2015.promise"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "spine/**/*",
        "node_modules/**/*",
        "dist"
    ]
}
